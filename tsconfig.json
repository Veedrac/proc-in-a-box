{
    "compilerOptions": {
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "target": "esnext"
    },
    "files": [
        "src/tutorial.ts",
        "src/definitions.ts"
    ]
}
